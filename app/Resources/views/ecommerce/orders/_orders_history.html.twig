{% if orders is defined and orders is not empty %}

<div class="container mb-4">
    <div class="row">
        <div class="col-12">
            <h4>Order History</h4>
        </div>

        <div class="col-12">
            {% for order in orders %}
                <table class="table table-bordered table-sm table-secondary">
                    {% include "ecommerce/orders/__order.html.twig" with {'order': order, 'index': loop.index } only %}
                </table>
            {% endfor %}
        </div>
    </div>
</div>
{% endif %}